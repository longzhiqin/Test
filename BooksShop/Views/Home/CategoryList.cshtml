@model List<Categories>
@using BooksShop.Models

@{
    ViewBag.Title = "图书分类管理";
    Layout = "~/Views/Home/ManageMaster.cshtml";
    <link href="~/CSS/CatetroyList.css" rel="stylesheet" />
    <script src="~/JS/CategoryList.js"></script>
}

<div class="main">
    <div class="top">您现在的位置：<a href="#"> 第三波</a> ><a href="#"> 管理员后台 </a>><a href="#"> 图书管理</a> > 添加图书分类 </div>
    <div class="AddCatetory">
        @using(Html.BeginForm("AddCategory","Home")){
        <input type="text" name="txtName" id="txtName">
        <input type="submit" value="添加分类" onclick="return isNullOrEmpty();">
        }
    </div>
    <div class="page">
        第<span id="index"> @ViewBag.index</span> 页，共<span id="tolPage"> @ViewBag.TolPage</span> 页（共计 @ViewBag.TolRecord 笔）
    </div>
    <div class="mytb">
        <table cellpadding="0" cellspacing="0" style="width:100%;">
            <tr>
                <th style="width:60px;">序号</th>
                <th>书籍分类名称</th>
                <th style="width:100px;">操作</th>
            </tr>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td style="width:60px;">@(i + 1)</td>
                    <td class="LoginId">@Model[i].Name</td>
                    <td class="state" style="width:100px;">
                        @Html.ActionLink("删除", "DeleteCategory", "Home", new { Id = Model[i].Id }, new { onclick = "return btn_delete()" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="footer">
        <input type="button" value="首页" onclick="FirstPage();" />
        <input type="button" value="上一页" onclick="PageUp();" />
        <input type="button" value="下一页" onclick="PageDown();" />
        <input type="button" value="尾页" onclick="LastPage();" />
    </div>
</div>
